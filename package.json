{
  "name": "p2p-chatter-lite",
  "version": "1.0.0",
  "description": "Lightweight P2P Chatter - Privacy-focused messaging with graphical installer",
  "main": "main.js",
  "author": "antX/bad-antics",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win portable --publish never",
    "build-installer": "electron-builder --win nsis --publish never",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "setup": "node setup-launcher.js",
    "build-exe": "pkg setup-launcher.js --targets win-x64 --output p2plite.exe --compress Brotli"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^23.6.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "setup-launcher.js",
      "main.js"
    ],
    "assets": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "targets": [
      "win-x64"
    ],
    "compress": "Brotli",
    "outputPath": "./"
  },
  "build": {
    "appId": "com.bad-antics.p2p-chatter-lite",
    "productName": "P2P Chatter Lite",
    "files": [
      "main.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "portable"
      ],
      "sign": null,
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "automatically": "^1.0.1",
    "executed": "^0.1.1",
    "first": "^0.0.3",
    "on": "^1.3.0",
    "run": "^1.5.0"
  }
}
